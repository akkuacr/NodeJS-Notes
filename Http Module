const http=require('http');
const server=http.createServer((req,res)=>{
     if(req.url=='/'){
        res.write('<h1> HELLO NODE.Js </h1');
     }else if(req.url=='/about')
     {
        res.write('<h1> Hello Buddy</h1>');
     }

     res.end();
})

server.listen(5001);
console.log('The http request is running on port 5000');


